{
    "configuration": {
      "name": "Rock, Paper, Scissors",
      "player count": {"min": 2, "max": 4},
      "audience": false,
      "setup": {
          "Rounds": 4
      }
  },
  "constants": {
      "weapons": [
        { "name": "Rock",     "beats": "Scissors"},
        { "name": "Paper",    "beats": "Rock"},
        { "name": "Scissors", "beats": "Paper"}
      ]
    },
  
    "variables": {
      "winners": []
    },
  
    "per-player": {
      "wins": 0,
      "weapon": ""
    },
  
    "per-audience": {},
  
    "rules": [
      { "rule": "foreach",
        "list": "setup.Rounds.upfrom(1)",
        "element": "round",
        "rules": [
  
          { "rule": "global-message",
            "value": "Round {round}. Choose your weapon!"
          },
  
          { "rule": "parallelfor",
            "list": "players",
            "element": "player",
            "rules": [
  
              { "rule": "input-choice",
                "to": "player",
                "prompt": "{player.name}, choose your weapon!",
                "choices": "constants.weapons.sublist(name)",
                "result": "player.weapon",
                "timeout": 10
              }
  
            ]
          },
  
          { "rule": "discard",
            "from": "variables.winners",
            "count": "variables.winners.size"
          },
  
          { "rule": "foreach",
            "list": "constants.weapons",
            "element": "weapon",
            "rules": [
  
              { "rule": "when",
                "cases": [
                  { "condition": "!players.weapon.contains(weapon.name)",
                    "rules": [
  
                      { "rule": "extend",
                        "target": "variables.winners",
                        "list": "players.collect(player player.weapon == weapon.beats)"
                      }
  
                    ]  
                  }
                ]
              }
  
            ]
          },
  
          { "rule": "when",
            "cases": [
              { "condition": "variables.winners.size == players.size",
                "rules": [
                  { "rule": "global-message",
                    "value": "Tie game!"
                  }
                ]
              },
              { "condition": "variables.winners.size == 0",
                "rules": [
                  { "rule": "global-message",
                    "value": "Tie game!"
                  }
                ]
              },
              { "condition": "true",
                "rules": [
                  { "rule": "global-message",
                    "value": "Winners: {variables.winners.name}"
                  },
                  { "rule": "foreach",
                    "list": "variables.winners",
                    "element": "winner",
                    "rules": [
                      { "rule": "add",
                        "to": "winner.wins",
                        "value": 1
                      }
                    ]
                  }
                ]
              }
            ]
          }
  
        ]
      },
  
      { "rule": "scores",
        "score": "wins",
        "ascending": false
      }
    ]
}